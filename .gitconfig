[alias]
	ga='git add'
	gss='git status -bs'
	gca='git commit -a'
	glog='git log --graph --pretty=oneline --abbrev-commit'
	gl='git pull'
	gp='git push'
	gd='git diff'
	gb='git branch'

	gcl='git clone'
	gall='git add -A'
	gpristine='git reset --hard && git clean -dfx'
	gclean='git clean -fd'
	gsu='git submodule update --init --recursive'
	gpr='git pull --rebase'
	gpp='git pull && git push'
	gpom='git push origin master'
	grv='git remote -v'
	gra='git remote add'
	gba='git branch -a'
	gcount='git shortlog -n'
	gcp='git cherry-pick'
	gcpx='git cherry-pick -x'
	gco='git checkout'
	gcom='git checkout master'
	gcb='git checkout -b'
	gcob='git checkout -b'
	gdel='git branch -D'
	gt='git tag'
	gta='git tag -a'
	gtd='git tag -d'
	gtl='git tag -l'

        ghubnew="curl -u $(git config --get github.user) https://api.github.com/user/repos -d "{\"name\":\"$(basename $PWD)\"}" && git remote add origin git@github.com:$(git config --get github.user)/$(basename $PWD).git && git push origin master"
